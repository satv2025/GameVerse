{
    "rewrites": [
      {
        "source": "/:path",
        "destination": "/:path.html"
      }
    ],
    "redirects": [
      {
        "source": "/404",
        "destination": "/404.html",
        "statusCode": 404
      },
      {
        "source": "/index",
        "destination": "/",
        "statusCode": 301
      },
      {
        "source": "/:path.html",
        "destination": "/:path",
        "statusCode": 301
      }
    ]
  }  